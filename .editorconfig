# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript
[*.{js,ts,mjs,mts}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Jupyter notebooks (JSON format)
[*.ipynb]
indent_size = 1
insert_final_newline = false

# Shell scripts
[*.sh]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

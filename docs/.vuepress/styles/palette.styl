// ==========================================
// 色彩主题配置 - Labuladong 风格
// ==========================================

// 主色调 - 深青色/绿色 (Teal)
$accentColor = #11a8cd
$activeColor = #11a8cd

// 文字颜色
$textColor = #2c3e50
$textColorLight = #7f8c8d
$textColorLighter = #a3a3a3

// 背景颜色
$bgColor = #ffffff
$bgColorLight = #f8f9fa
$bgColorBlur = rgba(255, 255, 255, 0.9)

// 边框颜色
$borderColor = #eaecef
$borderColorLight = #f0f0f0

// 代码块颜色
$codeBgColor = #282c34
$codeColor = #abb2bf

// 提示块颜色
$tipColor = #11a8cd
$warningColor = #e7c000
$dangerColor = #cc0000
$noteColor = #4e6e8e

// 侧边栏
$sidebarWidth = 280px
$sidebarBgColor = #f8f9fa
$sidebarActiveColor = $accentColor

// 导航栏
$navbarHeight = 60px
$navbarBgColor = #ffffff
$navbarTextColor = $textColor

// 内容区域
$contentWidth = 860px
$homePageWidth = 1200px

// 右侧目录
$rightMenuWidth = 200px

// 阴影
$boxShadow = 0 2px 12px 0 rgba(0, 0, 0, 0.1)
$boxShadowHover = 0 4px 20px 0 rgba(0, 0, 0, 0.15)

// 圆角
$borderRadius = 8px
$borderRadiusSmall = 4px

// 过渡动画
$transition = all 0.3s ease
$transitionFast = all 0.15s ease
